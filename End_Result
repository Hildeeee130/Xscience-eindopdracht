# De patronen om te zien of iemand vertelt wat er aan de hand is.
patterns = { 
   "ik heb pijn aan mijn (.*)":"Waarom heb je pijn aan je {}?", 
   "ik voel me (.*)":"Waarom voel je je {}?",
   "ik ben (.*)":"Waarom ben je {}?",
   "ik heb (.*)":"Heb je {}?",
   "ik heb last van (.*)":"Heb je last van je {}?"
}

